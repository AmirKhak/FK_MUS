<div class="authentication_page" id="faq_body">

  <div class="sign_in_page">
    <% if @admin %>
      <div id="faq_index_button_container">
        <button id="faq_index_button" data-toggle="modal" data-target="#mapModal">سوال اضافه کن </button>
      </div>

      <div class="modal" id="mapModal" role="dialog">
        <div class="gorgan_map_Modal" class="modal-dialog">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-body">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <%= form_with scope: :faq, url: '/faq', local: true do |f| %>

                <div class="form-group">
                  <%= f.label "سوال" %>
                  <%= f.text_area :question, class: 'form-control', required: true %>
                </div>

                <div class="form-group">
                  <%= f.label "جواب" %>
                  <%= f.text_area :answer, class: 'form-control', required: true %>
                </div>

                <div class="form-group">
                  <%= f.submit 'اضافه کن', class: 'btn btn-default' %>
                </div>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    <% end %>

    <% @faq.each do |faq| %>
      <div class="faq_container">
        <div class="faq_question">
          <p><%= faq.question %></p>
          <% if @admin %>
            <button class="faq_question_button" data-toggle="modal" data-target="#changeModal">تغییر</button>
            <button class="faq_question_button">
              <%= link_to "حذف", faq_path(faq.id), method: 'delete' %>
            </button>

            <div class="modal" id="changeModal" role="dialog">
              <div class="gorgan_map_Modal" class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <%= form_with(model: faq, local: true) do |f| %>
                      <p>
                        <%= f.label "سوال" %>
                        <%= f.text_area :question, class: 'form-control'%>
                      </p>

                      <p>
                        <%= f.label "جواب" %>
                        <%= f.text_area :answer, class: 'form-control'%>
                      </p>

                      <p>
                        <%= f.submit 'تغییر', class: 'btn btn-default' %>
                      </p>
                    <% end %>
                  </div>
                </div>

              </div>
            </div>

          <% end %>
        </div>
        <div class="faq_answer">
          <p><%= faq.answer %></p>
        </div>
      </div>
    <% end %>

  </div>
  <%= image_tag('tanbour.jpg', class: "authentication_image") %>
</div>
