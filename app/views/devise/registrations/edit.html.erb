<div class="authentication_page">
  <div class="sign_in_page">
    <h2>تغییر اطلاعات کاربر </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label "پست الترونیک" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label "کلمه عبور" %><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em>حداقل <%= @minimum_password_length %> کاراکتر</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label "تایید کلمه عبور" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label "کلمه عبور کنونی" %><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label "عکس" %><br>
        <%= f.file_field :avatar %>
      </div>

      <div class="actions">
        <%= f.submit "بروز رسان" %>
      </div>
    <% end %>

    <h3>حذف حساب کاربری</h3>

    <p>ناراضی؟ <%= button_to "حذف", registration_path(resource_name), data: { confirm: "ایا مطمئنی؟" }, method: :delete %></p>

    <%= link_to "بازگشت", :back %>
  </div>
  <%= image_tag('tanbour.jpg', class: "authentication_image") %>
</div>
