<div class="authentication_page">
  <div class="sign_in_page">
    <h2>ثبت نام کاربر</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label "نام" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label "نام خوانوادگی" %><br />
        <%= f.text_field :surn_name, autofocus: true, autocomplete: "surn_name" %>
      </div>

      <div class="field">
        <%= f.label "پست الترونیک" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label "کلمه عبور" %>
        <% if @minimum_password_length %>
        <em>(حداقل <%= @minimum_password_length %> کاراکتر)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label "تایید کلمه عبور" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label "عکس" %><br>
        <%= f.file_field :avatar %>
      </div>

      <div class="actions">
        <%= f.submit "ثبت نام" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
  <%= image_tag('tanbour.jpg', class: "authentication_image") %>
</div>
