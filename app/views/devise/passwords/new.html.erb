<div id="authentication_page">
  <%= image_tag('tanbour.jpg', id: "authentication_image") %>

  <div id="sign_in_page">
    <h2>کلمه عبور را فراموش کرده اید؟</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label "پست الکترونیک" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />
      </div>

      <div class="actions">
        <%= f.submit "دستورات بازیابی کلمه عبور را بفرست" %><br />
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
